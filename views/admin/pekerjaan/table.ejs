<table id="example2" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>No.</th>
      <th>Pekerjaan</th>
      <th>Deskripsi Pekerjaan</th>
      <th>Banner</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i = 0; i < data.length; i++){ %>
    <tr>
      <td><%= i + 1 %></td>
      <td><%= data[i].pekerjaan %></td>
      <td><%= data[i].deskripsiPekerjaan %></td>
      <td>2</td>
      <td>
        <form
          action="/pekerjaan/delete/<%= data[i]._id %>?_method=DELETE"
          method="POST"
        >
          <a
            href="/pekerjaan/edit/<%= data[i]._id %>"
            class="btn btn-info btn-sm"
          >
            <i class="fas fa-pencil-alt"></i>
            Ubah
          </a>
          <button class="btn btn-danger btn-sm">
            <i class="fas fa-trash"></i>
            Hapus
          </button>
        </form>
      </td>
    </tr>
    <% } %>
  </tbody>
</table>
